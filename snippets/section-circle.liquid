<div class="{{ class | default: '' }} two-columns-cell w-full h-auto flex flex-col p-2 text-center rounded-full">
    {% if image %}
      <img
        sizes="
        (min-width: 1536px) 500px,
        (min-width: 1280px) 400px,
        (min-width: 1024px) 350px,
        (min-width: 768px) 350px,
        (min-width: 640px) 300px,
        500px
        "
        srcset="
          {{ image | img_url: '300x' }} 300w,
          {{ image | img_url: '350x' }} 350w,
          {{ image | img_url: '400x' }} 400w,
          {{ image | img_url: '500x' }} 500w
        "
        src="{{ image | img_url: '500x' }}"
        alt="{{ image.alt }}"
        loading="lazy"
        class="w-auto h-[240px] lg:h-[360px] object-cover object-center rounded-full"
      >
    {% else %}
      {{ 'image' | placeholder_svg_tag: 'w-full border' }}
    {% endif %}
    <div class="w-full px-3 mt-8 mb-8 lg:mb-6">
      {% if linkText %}
        <span>
          <a class="font-platform font-medium text-white text-xs uppercase border-b-2 border-white tracking-widest py-2" href="{{ linkUrl }}">{{ linkText }}</a>
        </span>
        {% endif %}
    </div>
  </div>